{% extends "../layouts/base.njk" %}
{% import "../components/ui.njk" as ui with context %}

{% block content %}
<main id="main-content" class="pt-4" role="main">
  <section class="container-lg pb-5">
    {{ content | safe }}
  </section>
  <div class="bg-success py-4">
    <section class="container-lg">
      <h2>{{ cardNavigationTitle }}</h2>
      <div class="card-deck">
        {% for category in header.mainNavigation[locale] %}
          {% if category.inCardNavigation == true %}
            <div class="card bg-{{ category.theme }}">
              <div class="p{% if category.icon.name == "editorial-content" %}t{% else %}y{% endif %}-3 text-center">
                <img src="../images/icons/{{ category.icon.name }}.svg" alt="" width="{{ category.icon.width }}" height="{{ category.icon.height }}">
              </div>
              <div class="card-body bg-dark">
                <h3 class="card-title text-primary">
                  <a href="{{ category.href }}" class="text-primary stretched-link">{{ category.label }}</a>
                </h3>
                {% if category.abstract %}
                  <p class="card-text">
                    {{ category.abstract }}
                  </p>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </section>
  </div>
  <section class="container-lg py-4">
    <div class="d-flex">
      <h2>{% translate 'lastPosts.title', locale %}</h2>
      <div class="pl-3">
        <a href="articles/" class="btn btn-secondary btn-sm">{% translate 'lastPosts.seeAll', locale %}</a>
      </div>
    </div>
    {{ ui.lastPosts(collections["articles_" + locale], site.home.lastPosts.limit) }}
  </section>
</main>
{% endblock %}
