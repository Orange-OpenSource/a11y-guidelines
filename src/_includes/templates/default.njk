{% extends "../layouts/base.njk" %}
{% import "../components/ui.njk" as ui with context %}

{% block content %}
  {% if displayToc == true %}
    <div class="container-lg pt-4">
      <div class="row">
        <main id="main-content" class="col-md-8" role="main">
          {{ content | safe }}
        </main>
        <div class="col-md-4">
          {{ ui.toc() }}
        </div>
      </div>
    </div>
  {% else %}
    <main id="main-content" class="container-lg pt-4" role="main">
      {{ content | safe }}
    </main>
  {% endif %}
{% endblock %}
