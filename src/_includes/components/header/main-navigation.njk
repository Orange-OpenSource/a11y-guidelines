{% import "../ui.njk" as ui with context %}

<div class="navbar navbar-expand-md" data-bs-theme="dark">
  <nav id="main-menu" class="container-lg justify-content-md-start align-items-center" role="navigation" aria-label="{{ 'navigation.main.label' | translate }}">
    <a href="/{{ locale }}/" class="navbar-brand flex-grow-1 flex-md-grow-0" title="{{ 'header.logoAlt' | translate }}">
      <img src="/assets/images/orange-logo.svg" alt="{{ 'header.logoAlt' | translate }}" width="50" height="50">
    </a>

    <button class="navbar-toggler collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#main-menu-list" aria-controls="main-menu-list" aria-expanded="false" aria-label="{{ 'navigation.main.burgerLabel' | translate }}">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse me-auto" id="main-menu-list">
      <ul class="navbar-nav me-auto">
        {%- for link in navigation.main[locale] -%}
          {% if link.mainMenu != false %}
            <li class="nav-item">
              {{ ui.navLink(link) }}
            </li>
          {%- endif -%}
        {%- endfor -%}
        {{ ui.changelang("mobile") }}
      </ul>
    </div>

    <div id="search-input"></div>

  </nav>
</div>
